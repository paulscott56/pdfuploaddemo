{{> header}}


<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-7 table-responsive">
            <h2>Uploaded Files for user: {{user}}</h2>
            <table id="customerTable" class="table">
                <thead>
                <tr>
                    <th>Filename</th>
                    <th>Created at</th>
                </tr>
                </thead>
                <tbody>
                {{#files}}
                    <tr>
                        <td><a href="/files?filename={{filename}}">{{filename}}</a></td>
                        <td>{{created}}</td>
                    </tr>
                {{/files}}
                </tbody>
            </table>
            <div>
                <a href="/uploadform" class="btn btn-light btn-block" role="button">Upload files</a>
            </div>
        </div>
    </div>
</div>

{{> footer}}